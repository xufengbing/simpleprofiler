<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="rcpmail.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="rcpmail.Perspective"
            id="rcpmail.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Message"
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="rcpmail.View"
            id="rcpmail.view">
      </view>
      <view
            name="MailboxesCNF"
            allowMultiple="false"
            icon="icons/sample3.gif"
            class="rcpmail.EditedCommonNavigator"
            id="rcpmail.NavigatorView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Mail"
            id="rcpmail.category">
      </category>
      <command
            name="Open Mailbox"
            description="Opens a mailbox"
            categoryId="rcpmail.category"
            id="rcpmail.open">
      </command>
      <command
            name="Open Message Dialog"
            description="Open a message dialog"
            categoryId="rcpmail.category"
            id="rcpmail.openMessage">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="rcpmail.open"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+2">
      </key>
      <key
            commandId="rcpmail.openMessage"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+3">
      </key>
      <key
            commandId="org.eclipse.ui.file.exit"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+X">
      </key>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="rcpmail.application"
            name="RCP Product">
         <property
               name="aboutText"
               value="RCP Mail template created by PDE">
         </property>
         <property
               name="windowImages"
               value="icons/sample2.gif">
         </property>
         <property
               name="aboutImage"
               value="product_lg.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="rcpmail.NavigatorView">
      </viewer>
      <viewerContentBinding
            viewerId="rcpmail.NavigatorView">
         <includes>
            <contentExtension
                  pattern="rcpmail-basic-with-cnf.MailboxContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="rcpmail.ViewContentProvider"
            id="rcpmail-basic-with-cnf.MailboxContent"
            labelProvider="rcpmail.ViewLabelProvider"
            name="MailboxContent"
            priority="normal">
         <triggerPoints>
            <or>
               <instanceof
                     value="rcpmail.NavigationView$TreeParent">
               </instanceof></or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="rcpmail.NavigationView$TreeObject">
               </instanceof>
               <instanceof
                     value="rcpmail.NavigationView$TreeParent">
               </instanceof>
            </or></possibleChildren>
      </navigatorContent>
   </extension>

</plugin>
