<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="rcpmail.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="rcpmail.Perspective"
            id="rcpmail.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Message"
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="rcpmail.View"
            id="rcpmail.view">
      </view>
      <view
            name="MailboxesCN"
            allowMultiple="false"
            icon="icons/sample3.gif"
            class="rcpmail.EditedCommonNavigator"
            id="rcpmail.navigatorView">
      </view>
      <view
            class="rcpmail.MessageTableView"
            id="rcpmail.MessageTableView"
            name="Messages">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Mail"
            id="rcpmail.category">
      </category>
      <command
            name="Open Mailbox"
            description="Opens a mailbox"
            categoryId="rcpmail.category"
            id="rcpmail.open">
      </command>
      <command
            categoryId="rcpmail.category"
            defaultHandler="rcpmail.handlers.CreateServerHandler"
            description="Open a message dialog"
            id="rcpmail.openMessage"
            name="Open Message Dialog">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="rcpmail.open"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+2">
      </key>
      <key
            commandId="rcpmail.openMessage"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+3">
      </key>
      <key
            commandId="org.eclipse.ui.file.exit"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+X">
      </key>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="rcpmail.Application"
            name="RCP Product">
         <property
               name="aboutText"
               value="RCP Mail template created by PDE">
         </property>
         <property
               name="windowImages"
               value="icons/sample2.gif">
         </property>
         <property
               name="aboutImage"
               value="product_lg.gif">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="rcpmail.navigatorView">
      </viewer>
      <viewerContentBinding
            viewerId="rcpmail.navigatorView">
         <includes>
            <contentExtension
                  pattern="rcpmail.mailboxContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="rcpmail.ServerTreeContentProvider"
            icon="icons/at.gif"
            id="rcpmail.mailboxContent"
            labelProvider="rcpmail.ServerLabelProvider"
            name="MailboxContent"
            priority="normal">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.eclipse.core.resources.IProject">
               </instanceof>
               <instanceof
                     value="rcpmail.model.Model">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="rcpmail.model.Model">
               </instanceof>
               <instanceof
                     value="rcpmail.model.Server">
               </instanceof>
               <instanceof
                     value="rcpmail.model.Folder">
               </instanceof>
            </or>
         </possibleChildren>
      </navigatorContent>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="rcpmail menu"
               label="rcpmail">
            <command
                  commandId="rcpmail.openMessage"
                  label="Create New Server"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewer
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
      </viewer>
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="rcpmail.mailboxContent">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>

</plugin>
